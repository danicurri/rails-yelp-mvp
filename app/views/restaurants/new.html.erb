<h1>estoy en el new de restaurant</h1>


<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-3"></div>
    <p><%= @restaurant.name %></p>
    <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit "create restaurant", class: "btn btn-primary" %>
    <br>
    <br>
    <div> <p> <%= link_to "back to index", restaurants_path%> </p></div>
    <% end %>
  </div>
</div>
